
@if(Show){

    <div class="modal fade show d-block" tabindex="-1" role="dialog" @ref="ModalRef">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title text-dark">Confirm</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>@Message</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                <button class="btn btn-danger" @onclick="Confirm">Yes</button>
            </div>
        </div>
    </div>
</div>
}
@code {
    private ElementReference ModalRef;

    [Parameter] public string Message { get; set; }
    [Parameter] public int TargetId { get; set; }
    [Parameter] public bool Show { get; set; } = false;
    [Parameter] public EventCallback<int> OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }

    private async Task Confirm()
    {
        Show = false;
        if (OnConfirm.HasDelegate)
        {
            await OnConfirm.InvokeAsync(TargetId);
        }
    }

    private async Task Cancel()
    {
        Show = false;
        if (OnCancel.HasDelegate)
        {
            await OnCancel.InvokeAsync();
        }
    }
}
